<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.screenshare.rtmp.android.nginx"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    
    <application
        android:allowBackup="true"
        android:name="org.screenshare.rtmp.android.nginx.NginxApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name="org.screenshare.rtmp.android.nginx.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.screenshare.rtmp.android.nginx.activity.SettingsActivity"
            android:label="@string/action_settings"
            android:exported="false"
            android:configChanges="orientation" >
        </activity>
    </application>

</manifest>
